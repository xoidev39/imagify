{
    "name": "xoixoi/imagify",
    "description": "Thư viện xử lý ảnh PHP mạnh mẽ với các tính năng: watermark, resize, tối ưu hóa và chuyển đổi WebP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Xoixoi",
            "email": "xoixoi@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Xoixoi\\IMagify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xoixoi\\IMagify\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "keywords": [
        "image",
        "watermark",
        "resize",
        "optimize",
        "webp",
        "gd"
    ]
}
